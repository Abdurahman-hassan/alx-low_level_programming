CC = gcc
SRC = main.c school.c
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic
RM = rm -f

all: $(NAME)

$(NAME): $(SRC) m.h
	$(CC) $(CFLAGS) $(SRC) -o $(NAME)

clean:
	-$(RM) *~

oclean:
	-$(RM) $(SRC:.c=.o)

fclean: clean oclean
	-$(RM) $(NAME)

re: fclean all

.PHONY: all clean fclean oclean re